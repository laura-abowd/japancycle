<div class="container m-5">

  <h1>Show</h1>
  <%= simple_form_for([@cycle, @booking]) do |f| %>
  <%= f.error_notification %>
  <%= f.input :pick_up_date, label: "When will you pick this bike up by? (Max 1 week)" %>
  <%=f.input :Description, label: "Would you like to share anything with the seller?" %>
  <%= f.button :submit, class: "btn-primary" %>
  <%= f.button :button, "Cancel", type: "reset", class: "btn-outline-warning" %>
<% end %>
</div>



